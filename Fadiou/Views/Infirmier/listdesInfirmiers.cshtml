            @Html.DisplayFor(modelItem => item.personne.nomPers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.personne.prenomPers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.personne.adressePers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.specialteInf)
        </td>
